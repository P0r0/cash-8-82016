<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llCellSince"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Please ensure that all the documents you upload are self-signed and in JPEG format only.
If not, your loan will not be processed."
        android:textColor="@color/colorText01"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:textSize="18sp"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorText01"
        android:layout_centerVertical="true" />
</LinearLayout>
