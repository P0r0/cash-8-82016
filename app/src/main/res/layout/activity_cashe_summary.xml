<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.tslc.cashe.android.CasheSummary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bgArc"
        android:src="@drawable/bg_arc"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TO BE REPAID"
        android:id="@+id/caption"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <View
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:id="@+id/title_underline"
        android:layout_below="@+id/caption"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/tvRepay"
android:textSize="32dp"
android:textStyle="bold"
android:layout_below="@+id/caption"
android:layout_centerHorizontal="true"
android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bgArc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llBody"
            android:layout_gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bgArc"
        android:id="@+id/llFigures">


<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/tblFigures"
    android:stretchColumns="5">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_loan"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CASHe AMOUNT"
            android:id="@+id/textView5"
            android:layout_column="2"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvCasheAmt"
            android:layout_column="5"
            android:textStyle="bold"
            android:textColor="#33ACA1"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/rowOneTime">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_processing_fee"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ONE TIME FEE"
            android:id="@+id/textView61"
            android:layout_column="2"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFeeFlat"
            android:layout_column="5"
            android:textStyle="bold"
            android:textColor="#33ACA1"
            android:layout_gravity="right"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_processing_fee"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PROCESSING FEE"
            android:id="@+id/tvPFee"
            android:layout_column="2"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFeeProc"
            android:layout_column="5"
            android:textStyle="bold"
            android:textColor="#33ACA1"
            android:layout_gravity="right"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_in_hand_amount"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="IN HAND AMOUNT"
            android:id="@+id/textView7"
            android:layout_column="2"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvInHand"
            android:layout_column="5"
            android:textStyle="bold"
            android:textColor="#33ACA1"
            android:layout_marginRight="8dp"
            android:layout_gravity="right"
            android:textSize="16sp" />
    </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33ACA1"
            android:id="@+id/divider_one"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true"
             />

    <!--<TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_disbursement"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DISBURSEMENT DATE"
            android:id="@+id/tvDisburse"
            android:layout_column="2"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDisDate"
            android:layout_column="11"
            android:layout_marginLeft="8dp"
            android:textColor="#33ACA1"
            android:layout_gravity="right" />
    </TableRow>-->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_due"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DUE DATE"
            android:id="@+id/tvDue"
            android:layout_column="2"
            android:layout_marginRight="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDueDate"
            android:layout_column="5"
            android:textColor="#33ACA1"
            android:layout_gravity="right"
            android:textSize="20sp" />
    </TableRow>

</TableLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33ACA1"
        android:id="@+id/divider_two"
        android:layout_below="@+id/llFigures"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TO CALENDAR"
        android:id="@+id/switchCal"
        android:textSize="18dp"
        android:layout_below="@+id/divider_two"
        android:checked="false"
        android:layout_marginLeft="12dp"
        android:switchPadding="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33ACA1"
        android:id="@+id/divider_three"
        android:layout_below="@+id/switchCal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llButton"
        android:layout_below="@+id/llBody"
        android:gravity="center_horizontal|bottom">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibDeposit"
        android:background="@drawable/btn_proceed"
        android:layout_below="@+id/tvBankDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    </LinearLayout>

    </RelativeLayout>


</RelativeLayout>

</android.support.v4.widget.NestedScrollView>