<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.tslc.cashe.android.SignIn"
    android:background="@drawable/bg_signin">

    <!--<com.facebook.login.widget.LoginButton
        android:id="@+id/btnFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="272dp"
        android:background="@drawable/btn_facebook"/>-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibFacebook"
        android:background="@drawable/btn_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="272dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibLinkedIn"
        android:background="@drawable/btn_linkedin"
        android:layout_below="@+id/ibFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibGoogle"
        android:background="@drawable/btn_google"
        android:layout_below="@+id/ibLinkedIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"/>

</RelativeLayout>
