<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container_smart_upload"

    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.tslc.cashe.android.IFSCSearch">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivHdr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_arc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMART UPLOAD"
        android:id="@+id/caption"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <View
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:id="@+id/title_underline"
        android:layout_below="@+id/caption"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/actionbar_background_color"
        android:textSize="20dp"
        android:text="Step 1"
        android:id="@+id/tvStep1"
        android:layout_below="@+id/ivHdr"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp">
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/step1Img"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tvStep1"
        android:background="@drawable/step_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Place the relevant documents on a self signed white paper"
        android:id="@+id/tvStep1Text"
        android:layout_below="@+id/step1Img"

        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorTextGray"
        android:textSize="20dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Step 2"
        android:id="@+id/tvStep2"
        android:layout_below="@+id/tvStep1Text"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/actionbar_background_color"
        android:textSize="20dp">
    </TextView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/step2Img"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tvStep2"
        android:background="@drawable/step_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Place mobile camera vertically on the document. Click &amp; upload"
        android:id="@+id/tvStep2Text"
        android:layout_below="@+id/step2Img"

        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorTextGray"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Don&apos;ts"
        android:id="@+id/tvDonts"
        android:layout_below="@+id/tvStep2Text"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorError"
        android:textSize="20dp"
        >
    </TextView>
    <View
        android:layout_width="55dp"
        android:layout_height="1dp"
        android:background="@color/colorError"
        android:id="@+id/donts_small_underline"
        android:layout_below="@+id/tvDonts"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
    

  />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorText01"
        android:id="@+id/donts_underline"
        android:layout_below="@+id/donts_small_underline"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/donts"
        android:layout_below="@+id/donts_underline"
        android:background="@drawable/donts"
        android:layout_marginBottom="80dp"/>

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>