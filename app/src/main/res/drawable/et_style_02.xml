<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><layer-list>
        <item android:bottom="1dp"
            android:left="-2dp"
            android:right="-2dp"
            android:top="-2dp">
            <shape android:shape="rectangle" >
                <solid android:color="#FFFFFF" />
                <stroke
                    android:width="0.25dp"
                    android:color="#66C1ED" />
                <padding android:bottom="2dp" android:left="0dp" android:right="0dp" android:top="2dp"/>
            </shape>
        </item>
    </layer-list></item>
    <item android:state_enabled="true"><layer-list>
        <item android:bottom="1dp"
            android:left="-2dp"
            android:right="-2dp"
            android:top="-2dp">
            <shape android:shape="rectangle" >
                <solid android:color="#FFFFFF" />
                <stroke
                    android:width="0.25dp"
                    android:color="#66C1ED" />
                <padding android:bottom="2dp" android:left="0dp" android:right="0dp" android:top="2dp"/>
            </shape>
        </item>
    </layer-list></item>
</selector>